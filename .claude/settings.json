{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/user/.claude/hooks/pre-commit-quality-checks.sh",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
